<div class="d-flex flex-column align-items-center justify-content-center">
  <h4>Success!Please use this link:</h4>
  <a id="generatedURL" href="{{urlOriginal}}">{{urlShorten}}</a>
  <button class="btn btn-primary mt-2" id="btn" type="button" onclick="copyToClipBoard()">Copy</button>
</div>
<script>
  function copyToClipBoard() {
    const btn = document.getElementById('btn')
    let url = document.getElementById('generatedURL').innerHTML
    navigator.clipboard.writeText(url)
      .then(() => {
        console.log("Text copied to clipboard...", url)
      })
      .catch(err => console.log(err))
    btn.classList.add('btn-secondary')
    btn.innerText = 'Copied!'
  }
</script>